<!-- Instructions frame -->
<frame id="tf_instruction" x="3" y="21" width="35" height="35" bg="pink" fg="brown" bar="true" barBG="purple" barFG="white" barText="Instructions:" borderColor="purple" borderLeft="true" borderRight="true" borderBottom="true">
  <label x="2" y="2" width="34" text="For the initial setup, you will need to give the turtle:"/>
